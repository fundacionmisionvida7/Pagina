{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/subscribe.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/devotional",
      "dest": "server.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/subscribe",
      "dest": "server.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/send-daily",
      "dest": "server.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "server.js"
    }
  ],
  
    "headers": [
      {
        "source": "/api/subscribe",
        "headers": [
          { 
            "key": "Access-Control-Allow-Origin", 
            "value": "https://mision-vida-app.web.app, http://localhost:5501, http://127.0.0.1:5501"
          },
          { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
          { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
          { "key": "Access-Control-Allow-Credentials", "value": "true" }
        ]
      }
    ]
  }
