{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/subscribe",
      "dest": "api/subscribe.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/api/devotional",
      "dest": "api/devotional.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/send-daily",
      "dest": "api/send-daily.js",
      "methods": ["GET"]
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
